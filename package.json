{
  "name": "backsplash",
  "version": "0.1.0",
  "description": "Browser-based tile map editor with auto-detection built on Lit web components",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "arch": "likec4 serve ./docs/architecture",
    "download-tilesets": "bash scripts/download-tilesets.sh"
  },
  "dependencies": {
    "@bruk-io/bh-01": "file:../bh-01",
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@vitest/browser": "^4.0.18",
    "@vitest/browser-playwright": "^4.0.18",
    "likec4": "^1.50.0",
    "playwright": "^1.58.2",
    "typescript": "~5.7.0",
    "vite": "^6.1.0",
    "vitest": "^4.0.18"
  }
}
